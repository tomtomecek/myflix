%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        - if params[:watch]
          %video(controls width="665" height="375" autoplay)
            %source{src: @video.video_url, type: "video/mp4"}
            Your browser does not support the video tag.
        - else
          = image_tag(@video.large_cover_url, alt: @video.title)
      .video_info.col-sm-3
        %header
          %h3= @video.title
          %span Rating: #{@video.dec_rating}
        %p= @video.description
        .actions
          = link_to "Watch Now", video_path(@video, watch: true), class: "btn btn-primary"
          = link_to "+ My Queue", queue_items_path(video_id: @video.id), method: "post", class: 'btn btn-default' unless current_user.queued_video?(@video)

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for [@video, @review], inline_errors: true do |f|
        %fieldset
          .form-group
            .row
              .col-sm-3
                = f.select :rating, rating_options, label: "Rate this video"
          .form-group
            .row
              .col-sm-8
                = f.text_area :body, rows: 6, label: "Write review"
        %fieldset.form-group.actions.clearfix
          = f.submit "Submit", class: "btn"
          = link_to "Cancel", @video
      %header
        %h3 User Reviews (#{@reviews.count})
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %span Rating: #{review.rating} / 5
                %p by #{ link_to review.user.fullname, review.user }
              .col-sm-8
                %p= review.body